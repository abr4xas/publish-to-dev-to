{
    "name": "abr4xas/publish-to-dev-to",
    "description": "publish-to-dev-to",
    "keywords": [
        "abr4xas",
        "publish-to-dev-to"
    ],
    "homepage": "https://github.com/abr4xas/publish-to-dev-to",
    "license": "MIT",
    "authors": [
        {
            "name": "angel cruz",
            "email": "angel@tepuilabs.dev",
            "homepage": "https://tepuilabs.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "guzzlehttp/guzzle": "^7.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Abr4xas\\PublishToDevTo\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Abr4xas\\PublishToDevTo\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
		"format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
		"all" : "composer psalm && composer format"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "funding": [
        {
            "type": "patreon",
            "url": "https://www.patreon.com/angelcruzdev"
        },
        {
            "type": "other",
            "url": "https://ko-fi.com/angelcruzdev"
        }
    ]
}
